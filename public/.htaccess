# =========================
# .htaccess – jozapf.de (OPTIMIERT)
# Kombiniert beste Features aus alter + neuer Konfiguration
# Erstellt: 2025-11-25
# =========================

<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1) Canonical: HTTPS + non-www
  RewriteCond %{REQUEST_URI} !^/(impressum|datenschutz)\.html$
  RewriteCond %{HTTPS} !=on [OR]
  RewriteCond %{HTTP_HOST} ^www\.jozapf\.de$ [NC]
  RewriteRule ^ https://jozapf.de%{REQUEST_URI} [R=301,L]

  # 1b) Legacy-Redirects
  RewriteRule ^(impressum|datenschutz)\.html$ https://jozapf.de/ [R=301,L]

  # 2) Assets → Subdomain (Fallback für alte Bookmarks)
  RewriteCond %{HTTP_HOST} !^assets\.jozapf\.de$ [NC]
  RewriteRule ^assets/(png|jpe?g|svg|ico|favicon|fonts)/(.*)$ https://assets.jozapf.de/$1/$2 [R=301,L]

  # 3) robots.txt Kanonisierung
  RewriteCond %{REQUEST_URI} !^/robots\.txt$
  RewriteRule ^robots\.txt$ /robots.txt [R=301,L,NC]

  # 4) Legacy/Fehl-Endpoints
  Redirect 301 /sitemap.txt https://jozapf.de/sitemap.xml
  Redirect gone /test11.1/
  Redirect gone /feed/

  # 5) Sensible Dateien blocken
  #    Dotfiles sperren (außer .well-known für Let's Encrypt)
  RewriteRule "(^|/)\.(?!well-known/)" - [F]
  #    Config-Dateien sperren
  RewriteRule "(^|/)(\.?app\.env|composer\.(json|lock)|package(-lock)?\.json|yarn\.lock|wp-config\.php(\.bak)?|config\.(json|ya?ml)|\.env(\..*)?)$" - [F]

  # 6) PHP-Backend schützen (nur Dashboard-Dateien erlauben)
  RewriteRule ^assets/php/(dashboard-login\.php|dashboard\.php|dashboard-api\.php|dashboard-blocklist\.php|contact-php-handler\.php)$ - [L]
  RewriteRule ^assets/php/ - [F]
</IfModule>

# 7) Security Headers
<IfModule mod_headers.c>
  # HSTS (HTTP Strict Transport Security)
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  
  # Standard Security Headers
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set X-XSS-Protection "1; mode=block"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
  
  # Content Security Policy (CSP)
  Header always set Content-Security-Policy "default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://www.google.com https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data: https://assets.jozapf.de https://www.google-analytics.com; font-src 'self' data: https://assets.jozapf.de; connect-src 'self' https://api.github.com; frame-src 'self' https://www.google.com;"
  
  # CORS für OG Images (KRITISCH für Google/Social Media!)
  <FilesMatch "\.(png|jpg|jpeg|gif|webp|svg)$">
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
  </FilesMatch>
</IfModule>

# 8) Caching
<IfModule mod_expires.c>
  ExpiresActive On
  
  # CSS und JavaScript
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType application/x-javascript "access plus 1 year"
  
  # Bilder
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"
  
  # HTML (kein Caching)
  ExpiresByType text/html "access plus 0 seconds"
  
  # Default
  ExpiresDefault "access plus 1 month"
</IfModule>

# 9) Kompression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/plain text/html text/css
  AddOutputFilterByType DEFLATE application/javascript application/json application/xml
  AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# 10) Sicherheit
Options -Indexes
ServerSignature Off

# 11) Error Pages
ErrorDocument 404 /404.html
ErrorDocument 403 /403.html
